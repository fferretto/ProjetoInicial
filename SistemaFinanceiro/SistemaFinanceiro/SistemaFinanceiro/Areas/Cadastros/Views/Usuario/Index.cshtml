@model SistemaFinanceiro.Areas.Cadastros.Models.FiltroCadUsuarioModel
@using SistemaFinanceiro.Helper

@{
    ViewBag.Title = "Usuario";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{
    <div class="panel panel-default">
        <div class="panel-heading">
            <div style="font-weight: bold; font-size: 15px;">
                <b>Cadastro</b>
            </div>
        </div>
        <div class="panel-body">
            <div class="form-group">
                <div class="form-row cadInput">
                    @Html.EditBootstrapFor(model => Model.nomeUsuario, tudoTamanho: 10, inputTamanho: 12)
                    <div class="form-group col-md-2" id="locBtn">
                        <label></label>
                        <div class="input-group col-xs-12" id="btnLocalizar">
                            <div class="btn btn-success" data-toggle="modal" data-target="#Localizar" onclick="LocalizaCliente();">
                                @*<span>Localizar</span>*@
                                <i class="fa fa-search"></i>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="form-row cadInput">
                    @Html.EditBootstrapFor(model => Model.Email, tudoTamanho: 12, inputTamanho: 12)
                </div>
                <div class="form-row cadInput">
                    <div class="col-md-6" style="padding: 0;">
                        @Html.EditBootstrapFor(model => Model.Fone, tudoTamanho: 12, inputTamanho: 11)
                    </div>
                    <div class="col-md-6" style="padding: 0;">
                        @Html.EditBootstrapFor(model => Model.dataNascimento, tudoTamanho: 10, inputTamanho: 12)
                    </div>
                </div>
                <div class="form-row cadInput">
                    @Html.EditBootstrapFor(model => Model.Cpf, tudoTamanho: 7, inputTamanho: 10)
                </div>
                <div class="form-row cadInput btnEnviar">
                    <button class="btn btn-success mt-5">Enviar</button>
                </div>
            </div>
        </div>
    </div>
    <div class="modal fade" id="Localizar" tabindex="-1" role="dialog" aria-labelledby="Localizar" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>

                <div id="modal">

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-info" data-dismiss="modal">Fechar</button>
                </div>
            </div>
        </div>
    </div>
}
<script>
    $("input").focus(function (e) {
        $("label[for='" + e.target.id + "']").addClass('labelFocus')
    }).blur(function () {
        $("label").removeClass('labelFocus')
    })

    function LocalizaCliente() {
        var url = "/Cadastros/Usuario/ConsultaUsuarios/";

        $("#modal").load(url);
        $("#Localizar").modal();
    }
</script>