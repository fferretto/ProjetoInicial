@model IList<SistemaFinanceiro.Areas.Cadastros.Models.FiltroCadUsuarioModel>

<div class="modal-body">

    <b>Teste informação da página</b>
    <div class="table-responsive">
        <table id="gridUsuario" class="table" cellspacing="0" width="100%">
            <thead>
                <tr>
                    <th>Codigo</th>
                    <th>Nome</th>
                    <th>CPF</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null)
                {
                    @for (int i = 0; i < Model.Count; i++)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(item => item[i].codigoUsuario)
                            </td>
                            <td>
                                @Html.DisplayFor(item => item[i].nomeUsuario)
                            </td>
                            <td>
                                @Html.DisplayFor(item => item[i].Cpf)
                            </td>
                            <td align="center">
                                <a href="@Url.Action("Index","Usuario", new { area="cadastros", id= Model[i].codigoUsuario })">
                                    <div class="btn btn-primary btn-xs">
                                        <i class="fa fa-edit"></i>
                                    </div>
                                </a>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>
<script>
    $(document).ready(function () {

        $('gridUsuario').dataTable({
            dom:'bfrtip'
        })
    })
</script>